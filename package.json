{
  "name": "expo-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol (MCP) サーバーの実装。Expo ドキュメント、API リファレンス、コミュニティリソースからコンテンツを取得・インデックス化・検索し、Cursor や他の開発者ツールでMCPプロトコル経由で利用可能にします。",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "expo-mcp-server": "./dist/index.js"
  },
  "scripts": {
    "start": "node dist/index.js",
    "mcp:stdio": "node dist/index.js --stdio",
    "mcp:http": "node dist/index.js --port 3000",
    "dev": "tsx watch src/index.ts",
    "build": "tsc && esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.js --external:@modelcontextprotocol/sdk --external:commander --external:events --external:node:events --external:fs --external:path --external:util --external:crypto --external:os --external:url --external:child_process --external:fastify --external:@fastify/cors --external:@fastify/rate-limit --external:@fastify/websocket",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:mcp": "jest --testPathPattern=mcp",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t expo-mcp-server .",
    "docker:run": "docker run -p 3000:3000 expo-mcp-server",
    "docker:mcp": "docker run -i expo-mcp-server --stdio"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "expo",
    "react-native",
    "cursor",
    "ai-tools",
    "documentation"
  ],
  "author": "Expo DevRel Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/websocket": "^11.1.0",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@xenova/transformers": "^2.17.2",
    "axios": "^1.10.0",
    "cheerio": "^1.1.0",
    "commander": "^9.x",
    "fastify": "^4.x",
    "gray-matter": "^4.0.3",
    "marked": "^15.0.12",
    "node-fetch": "^3.3.2",
    "robots-parser": "^3.0.1",
    "typesense": "^1.7.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/eventsource": "^1.1.15",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.x",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.x",
    "eventsource": "^4.0.0",
    "jest": "^29.x",
    "prettier": "^3.x",
    "ts-jest": "^29.4.0",
    "tsx": "^4.x",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/expo/expo-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/expo/expo-mcp-server/issues"
  },
  "homepage": "https://github.com/expo/expo-mcp-server#readme"
}
